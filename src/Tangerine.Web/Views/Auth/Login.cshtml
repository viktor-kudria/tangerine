@using Tangerine.Web.Models.Auth
@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<div class="container-fluid tg-login-page">
    <div class="row no-gutters">
        <div class="d-none d-md-flex col-md-4 col-lg-6 tg-login-bg-image"></div>
        <div class="col-md-8 col-lg-6">
            <div class="tg-login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row"></div>
                    <div class="col-md-9 col-lg-8 mx-auto">
                        <h3 class="tg-login-heading mb-4">Welcome back to Tangerine!</h3>
                        <form asp-action="Login" asp-controller="Auth" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Login" id="login" asp-for="Login"/>
                                <span asp-validation-for="Login"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password" id="password" asp-for="Password"/>
                                <span asp-validation-for="Password"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Log In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>